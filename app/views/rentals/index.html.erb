<div class="contents">
  <% unless user_signed_in? %>
  <p>ログインしていませんので、投稿できません</p>
  <% end %>
  <div class="table">
    <table>
    <caption><h3>鍵貸し出し状況</h3></caption>
      <tr style="background:#ccccff">
        <th>日付</th>
        <th>責任者</th>
        <th>部屋名</th>
        <th>貸し出し時間</th>
        <th>返却/差し替え時間</th>
        <th>団体名（差し替え時）</th>
        <th>動画</th>
        <th>編集・削除</th>
      </tr>
        <% @rentals.each_with_index do |rental, num| %>
          <tr>
            <td><%= rental.show_date %></td>
            <td><%= rental.user.last_name + rental.user.first_name %></td>
            <td><%= @rentals_name[num] %></td>
            <td><%= rental.show_rent_time %></td>
            <td><%= rental.show_return_time %>
              <% if user_signed_in? && current_user.id == rental.user_id %>
                <% unless rental.return_time %>
                  <%= link_to '返却', "/rentals/#{rental.id}/returning", method: :get %>
                <% end %>
              <% end %>
            </td >
            <td><%= rental.show_groupname %></td>
            <td>
              <%= link_to :video, rental.video_url.to_s, id: "video" %>
              <%= flowplayer_for :video, '/flowplayer.swf' do |player|
                player.playlist [{:autoplay => true,
                                  :autoBuffering => true}]
                player.onload do
                  'this.unmute();'
                end
              end%></td>
            <td>
            <% if user_signed_in? && current_user.id == rental.user_id %>
              <%= link_to '削除', "/rentals/#{rental.id}", method: :delete %>
              <%= link_to '編集', "/rentals/#{rental.id}/edit", method: :get %>
            <% end %>
            </td>
          </tr>
        <% end %>
    </table>
  </div>
</div>