<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script language="JavaScript">
$(document).ready( function(){
if (window.name != "test") {
location.reload();
window.name = "test";
} else {
window.name = "";
}
});
</script>

<div class="contents">
  <h2>新規投稿</h2>
  <%= form_for @rental do |f| %>
    <div style="margin: 8px 0">
      <%= f.label "部屋", style: { 'margin-right' => 8 } %>
      <%= f.select :room_id, [["音1", "1"], ["音2", "2"], ["音3", "3"], ["音4", "4"], ["音5", "5"], ["音6", "6"], ["合A", "7"], ["合B", "8"], ["合C", "9"], ["合D", "10"], ["合E", "11"], ["集1", "12"], ["集2", "13"]] %>
    </div>

    <div class="action_id">
      <%= f.label "用途", style: { 'margin-right' => 8 } %>
      <%= f.select :door_state, [["貸出", "0"], ["返却", "1"], ["差し替え", "2"]] %>
    </div>

      <div class="open_close">

        <div style="margin: 8px 0" class="time door_state_0 selected" >
          <%= f.label "時間", style: { 'margin-right' => 8 } %>
          <%= f.time_field :rent_time %>
        </div>

        <div style="margin: 8px 0" class="time door_state_1">
          <%= f.label "時間", style: { 'margin-right' => 8 } %>
          <%= f.time_field :return_time %>
        </div>

        <div style="margin: 8px 0" class="time door_state_2">
          <%= f.label "団体名", style: { 'margin-right' => 8 } %>
          <%= f.text_field :groupname %>
        </div>
      </div>

    <%= f.submit "送信", class: "btn btn-primary withripple" %>
  <% end %>
<%= link_to "一覧へ戻る", root_path %>
</div>